# Configuração de Ambiente Básica
# ==============================
# development | production
APP_ENV=development

# Configurações de Banco de Dados
# ==============================
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=nome_do_banco
DB_USER=usuario
DB_PASS=senha_segura
DB_CHARSET=utf8mb4

# Configurações de API Externa
# ===========================
# Obtenha uma chave em: https://newsapi.org
NEWS_API_KEY=sua_chave_aqui

# Opcional - AwesomeAPI para cotações
# AWESOME_API_BASE=https://economia.awesomeapi.com.br/json

# Configurações de Debug
# ======================
# true | false (sobrescreve APP_ENV)
DEBUG=true

# Configurações do Sistema
# ========================
APP_NAME="Gestão de Ativos"